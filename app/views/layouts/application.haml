!!!
%html
	%head
		%title Blogr
		=stylesheet_link_tag "bootstrap.min"
		=stylesheet_link_tag "bootstrap-responsive.min"
		=csrf_meta_tags
	%body 
		.row
			.span8.offset2
				%h1 Blogr
				-if !flash[:notice].nil?
					.alert=flash[:notice]
				%ul.nav.nav-pills 
					%li 
						=link_to "Home", root_path
					%li 
						=link_to "Writers", user_index_path
					-if current_user.nil?
						%li 
							=link_to "Sign Up", new_user_path
						%li 
							=link_to "Sign In", new_session_path
					-else
						%li 
							=link_to "Profile" 
						%li 
							=link_to "Sign Out", sign_out_path
						%li
							=link_to "New Post", "/post/new"
			.span10.offset2
				=yield 			


